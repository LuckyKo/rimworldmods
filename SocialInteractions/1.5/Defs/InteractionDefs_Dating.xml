<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <InteractionDef>
    <defName>AskForDate</defName>
    <label>ask for a date</label>
    <workerClass>SocialInteractions.InteractionWorker_AskForDate</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Romance</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->Asked [RECIPIENT_nameDef] on a date.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>r_logentry->Was asked on a date by [INITIATOR_nameDef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

  <ThoughtDef>
    <defName>CaughtCheating</defName>
    <durationDays>2</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>caught cheating</label>
        <description>I can't believe I saw them with my own eyes...</description>
        <baseMoodEffect>-25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <InteractionDef>
    <defName>CaughtCheating</defName>
    <label>caught cheating</label>
    <workerClass>SocialInteractions.InteractionWorker_CaughtCheating</workerClass>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] caught [RECIPIENT_nameDef] cheating.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>r_logentry->[RECIPIENT_nameDef] was caught cheating by [INITIATOR_nameDef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

  <InteractionDef>
    <defName>DateLovin</defName>
    <label>lovin'</label>
    <workerClass>SocialInteractions.InteractionWorker_DateLovin</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Romance</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->Ended a date with [RECIPIENT_nameDef] in a special way.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>r_logentry->Ended a date with [INITIATOR_nameDef] in a special way.</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

</Defs>